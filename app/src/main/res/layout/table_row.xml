<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beige"
    android:padding="5dp"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        >
        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:clickable="true">

            <TextView
                android:id="@+id/patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/cobalt"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/patient_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:textColor="@color/cobalt"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/deletePatient"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_baseline_remove_circle_24"></ImageView>

            <ImageView
                android:id="@+id/swapBackPatient"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_baseline_swap_vertical_circle_24"></ImageView>
        </TableRow>


