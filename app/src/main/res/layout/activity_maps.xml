<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        >

        <Button
            android:id="@+id/centralizer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:background="@drawable/bg_centralizer"
            android:drawableLeft="@drawable/ic_centralizer"
            android:elevation="2dp"
            android:paddingLeft="9dp" />
    </fragment>

    <ScrollView
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@drawable/map_bottom_sheet_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="20dp"


        >
        <FrameLayout
            android:id="@+id/sheet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:scrollbars="vertical">


            <!--        nearest text and filter-->
            <ImageView
                android:id="@+id/minimize"
                android:layout_width="48dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:src="@drawable/ic_rectangle_470"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                >
                <!--            nearest text-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearest"
                    android:layout_gravity="center"
                    android:textAppearance="?attr/textAppearanceOverline"
                    android:textColor="@color/cobalt" />

                <!--            filter icon-->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_bx_filter">
                </ImageView>
                <!--            dropdown icon-->
            </LinearLayout>

            <!--        cards-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_gravity="center_horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <!--card-->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/card1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/clinic1"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="30dp">

                                <!-- Title, secondary and supporting text -->
                                <TextView
                                    android:id="@+id/clinicname1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/clinicaddr1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />

                                <TextView
                                    android:id="@+id/clinicnum1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />
                                <TextView
                                    android:id="@+id/clinicopening1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />

                            </LinearLayout>


                            <!-- buttons queue number-->
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:padding="20dp"
                                    >
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center">
                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="5dp"
                                            android:src="@drawable/ic_users">

                                        </ImageView>
                                    <TextView
                                        android:id="@+id/clinicqueue1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5 in Queue"
                                        android:textColor="@color/cobalt"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        >
                                    </TextView>
                                </LinearLayout>

                                <Button

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Queue"
                                    android:textColor="@color/white" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!--card 2-->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        android:layout_marginTop="20dp"
                        >

                        <LinearLayout
                            android:id="@+id/card2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/clinic2"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="30dp">

                                <!-- Title, secondary and supporting text -->
                                <TextView
                                    android:id="@+id/clinicname2"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/clinicaddr2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />

                                <TextView
                                    android:id="@+id/clinicnum2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />
                                <TextView
                                    android:id="@+id/clinicopening2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />


                            </LinearLayout>



                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:padding="20dp"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/ic_users">

                                    </ImageView>
                                    <TextView
                                        android:id="@+id/clinicqueue2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5 in Queue"
                                        android:textColor="@color/cobalt"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        >
                                    </TextView>
                                </LinearLayout>

                                <Button
                                    android:id="@+id/clinicButton2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Queue"
                                    android:textColor="@color/white" />

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!--card 3-->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="10dp"
                        >

                        <LinearLayout
                            android:id="@+id/card3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/clinic3"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="30dp">

                                <!-- Title, secondary and supporting text -->
                                <TextView
                                    android:id="@+id/clinicname3"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceHeadline6"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/clinicaddr3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />

                                <TextView
                                    android:id="@+id/clinicnum3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />
                                <TextView
                                    android:id="@+id/clinicopening3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text=""
                                    android:textAppearance="?attr/textAppearanceOverline"
                                    android:textColor="?android:attr/textColorSecondary" />


                            </LinearLayout>



                            <LinearLayout

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:padding="20dp"
                                >
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="5dp"
                                        android:src="@drawable/ic_users">

                                    </ImageView>
                                    <TextView
                                        android:id="@+id/clinicqueue3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="5 in Queue"
                                        android:textColor="@color/cobalt"
                                        android:textStyle="bold"
                                        android:layout_gravity="center"
                                        >
                                    </TextView>
                                </LinearLayout>

                                <Button
                                    android:id="@+id/clinicButton3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Queue"
                                    android:textColor="@color/white" />

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </FrameLayout>

        </FrameLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>