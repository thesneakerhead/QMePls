<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        >
    </fragment>

    <AutoCompleteTextView
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round"
        android:completionThreshold="1"
        android:hint="Select a clinic"
        tools:ignore="MissingConstraints" />

    <FrameLayout
    android:id="@+id/sheet"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:padding="30dp"
    android:background="@drawable/map_bottom_sheet_shape"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:ignore="MissingConstraints"
    android:scrollbars="vertical">


        <!--        nearest text and filter-->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_dropdown"></ImageView>

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        >
        <!--            nearest text-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearest"
            android:layout_gravity="center"
            android:textAppearance="?attr/textAppearanceOverline"
            android:textColor="@color/cobalt" />

        <!--            filter icon-->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_bx_filter">
        </ImageView>
        <!--            dropdown icon-->
    </LinearLayout>

    <!--        cards-->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        >

        <!--card-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <!-- buttons queue number-->

                <LinearLayout
                    android:id="@+id/clinic1"
                    android:layout_width="204dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Title, secondary and supporting text -->

                    <TextView
                        android:id="@+id/clinicname1"
                        android:layout_width="181dp"
                        android:layout_height="41dp"
                        android:textAppearance="?attr/textAppearanceHeadline1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/clinicaddr1"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/clinicnum1"
                        android:layout_width="181dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/clinicopening1"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_users">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="5 in Queue"
                            android:textColor="@color/cobalt"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Queue"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!--card 2-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/clinic2"
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:id="@+id/clinicname2"
                        android:layout_width="181dp"
                        android:layout_height="41dp"
                        android:textAppearance="?attr/textAppearanceHeadline1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/clinicaddr2"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/clinicnum2"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/clinicopening2"
                        android:layout_width="183dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_users">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="5 in Queue"
                            android:textColor="@color/cobalt"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Queue"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!--card 3-->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            >

            <LinearLayout
                android:id="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/clinic3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <!-- Title, secondary and supporting text -->
                    <TextView
                        android:id="@+id/clinicname3"
                        android:layout_width="181dp"
                        android:layout_height="41dp"
                        android:textAppearance="?attr/textAppearanceHeadline1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/clinicaddr3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                    <TextView
                        android:id="@+id/clinicnum3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />
                    <TextView
                        android:id="@+id/clinicopening3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text=""
                        android:textAppearance="?attr/textAppearanceOverline"
                        android:textColor="?android:attr/textColorSecondary" />

                </LinearLayout>



                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:src="@drawable/ic_users">

                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 in Queue"
                            android:textColor="@color/cobalt"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            >
                        </TextView>
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Queue"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>